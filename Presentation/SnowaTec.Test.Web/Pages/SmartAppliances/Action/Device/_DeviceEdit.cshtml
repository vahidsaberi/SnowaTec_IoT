@using SnowaTec.Test.Domain.Dtos.Test

@model DeviceDto

<div class="modal-dialog">
    <form id="edit-form-modal" class="modal-content pt-0">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">×</button>
        <div class="modal-header mb-1">
            <h5 class="modal-title" id="exampleModalLabel">دستگاه <em id="form-header-text"></em></h5>
        </div>
        <div class="modal-body flex-grow-1">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)
            <div class="mb-1">
                @Html.LabelFor(x => x.Name,new { @class = "form-label"})
                @Html.TextBoxFor(x => x.Name,new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="mb-1">
                @Html.LabelFor(x => x.Description,new { @class = "form-label"})
                @Html.TextBoxFor(x => x.Description,new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.Description)
            </div>
            <div class="mb-1">
                @Html.LabelFor(x => x.ClientId,new { @class = "form-label"})
                @Html.TextBoxFor(x => x.ClientId,new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.ClientId)
            </div>
            <div class="mb-1">
                @Html.LabelFor(x => x.Topic,new { @class = "form-label"})
                @Html.TextBoxFor(x => x.Topic,new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.Topic)
            </div>
            <br />
            <button type="button" data-type="modal" class="save-btn btn btn-primary me-1 data-submit waves-effect waves-float waves-light">ثبت</button>
            <button type="button" class="btn btn-outline-secondary waves-effect" data-bs-dismiss="modal">انصراف</button>
        </div>
    </form>
</div>